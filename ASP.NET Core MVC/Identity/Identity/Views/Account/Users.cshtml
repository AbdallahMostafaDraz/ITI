@model IEnumerable<ApplicationUser>

<h1>All Roles</h1>
<div class="row">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>UserName</th>
                <th>Email</th>
                <th>Age</th>
                <th>Actions</th>
            </tr>           
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.Age</td>
                    <td><a class="btn btn-primary" asp-action="ManageRoles" asp-route-id="@user.Id">Manage Roles</a></td>
                    </tr>
            }
        </tbody>
    </table>
</div>