<link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap-grid.min.css" />

@model Department
<h1>Add New Department</h1>
<form asp-action="Create" method="post" class="form form-control">
  
    <label asp-for="Name" class="form-label"></label>
    <input asp-for="Name" class="form-control"/>
    <span asp-validation-for="Name" class="text-danger"></span><br/>

    <label asp-for="Capacity" class="form-label"></label>
    <input asp-for="Capacity" class="form-control" />
    <span asp-validation-for="Capacity" class="text-danger"></span>
    <br /><br />
    <input type="submit" value="Add New Student" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-danger">Back</a>
</form>

<br />
@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}
