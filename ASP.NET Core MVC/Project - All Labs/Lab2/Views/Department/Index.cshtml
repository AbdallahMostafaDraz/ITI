@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap-grid.min.css" />

<h1>All Departments</h1>
<a asp-action="Create" class="btn btn-primary">Add New</a> <br /><br />

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Capacity</td>
            <td>Options</td>
        </tr>
        
    </thead>
    <tbody>
        @if(Model.Count() == 0)
        {
            <tr>
                <td colspan="3">No Departments Exist!</td>
            </tr>
        }
        else
        {
            foreach(var dept in Model)
            {
                <tr>
                    <td>@dept.Id</td>
                    <td>@dept.Name</td>
                    <td>@dept.Capacity</td>
                    <td>
                        <a asp-action="Details" class="btn btn-info" asp-route-id="@dept.Id">Details</a>
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@dept.Id">Edit</a>
                        <a asp-action="Delete" asp-route-id="@dept.Id" onclick="return confirm ('Are You Sure Delete ?')" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<br />

