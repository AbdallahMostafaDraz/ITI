@model IEnumerable<Student>

<link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap-grid.min.css" />

<h1>All Students</h1>
<a asp-action="Create" class="btn btn-primary">Add New</a><br /><br />
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Grade</td>
            <td>Department</td>
            <td>Options</td>
        </tr>

    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="4">No Students Exist!</td>
            </tr>
        }
        else
        {
            foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Grade</td>
                    <td>@student.Department!.Name</td>
                    <td>
                        <a asp-action="Details" class="btn btn-info" asp-route-id="@student.Id">Details</a>
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@student.Id">Edit</a>
                        <a asp-action="Delete" asp-route-id="@student.Id" onclick="return confirm ('Are You Sure Delete Student ?')" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

