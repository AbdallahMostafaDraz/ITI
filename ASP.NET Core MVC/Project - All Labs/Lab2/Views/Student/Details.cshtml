@model Lab2.Models.Student

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="@Model.Id"></label>
        </dt>
        <dd class = "col-sm-10">
            <label>@Model.Id</label>
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="@Model.Name"></label>
        </dt>
        <dd class = "col-sm-10">
            <label>@Model.Name</label>
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="@Model.Grade"></label>
        </dt>
        <dd class = "col-sm-10">
            <label>@Model.Grade</label>
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="@Model.Email"></label>
        </dt>
        <dd class = "col-sm-10">
            <label>@Model.Email</label>
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="@Model.Department"></label>
        </dt>
        <dd class = "col-sm-10">
            <label>@Model.Department.Name</label>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-danger">Back</a>
</div>
